"to do commandline interface"

class TodoObject(name, description, priority) do {
    op init() do null
}

taskList = []

op add() do {
    name = input("Name of the task: ")
    description = input("Description of the task: ")

    shouldCont = true

    while shouldCont do {
        trying do{
            priority = toNum(input("Priority of the task: "))
            if priority > 10 or priority < 1 do {
                print("Priority must be between 1 and 10")
                continue
            }
            shouldCont = false
        } catch err do {
            print("Invalid input, please enter a number")
        }
    }
    taskList.append(TodoObject(name, description, priority))
}

op getTasks() do {
    tmp = taskList.sort()
    for task : tmp do {
        print(task.name)
        print(task.description)
        print(task.priority)
    }
}

commands = {
    "add": add,
    "get": getTasks
}
while true do {
    command = input("Enter command: ")
    if command == "exit" do {
        break
    } else do {
        if commands.keys.indexOf(command) == -1 do {
            print("Unknown command")
        } else do {
            commands[command]()
        }
    }
}